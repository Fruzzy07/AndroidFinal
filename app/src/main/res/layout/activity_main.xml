<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_profile" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/menu2" />

    <TextView
        android:id="@+id/textview_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_back"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/button_back"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="159dp"
        android:text="SAVE" />

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="31dp"
        android:hint="Name"
        android:inputType="textPersonName" />

    <!-- Container for the Date of Birth button and icon -->
    <RelativeLayout
        android:id="@+id/container_dob"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/calendar_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/calendar_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Date of Birth"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <!-- Container for the Country button and icon -->
    <RelativeLayout
        android:id="@+id/container_country"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_dob"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/country_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/country" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/country_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Country"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <!-- Container for the Gender button and icon -->
    <RelativeLayout
        android:id="@+id/container_gender"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_country"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/gender_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_gender" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/gender_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Gender"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical" />
    </RelativeLayout>

</RelativeLayout>